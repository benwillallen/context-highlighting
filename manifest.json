{
    "manifest_version": 3,
    "name": "Context Highlighter",
    "version": "1.0",
    "description": "Highlights the most important sentences on a webpage.",
    "permissions": ["activeTab", "scripting"],
    "host_permissions": ["<all_urls>"] ,
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "logo16.png",
        "48": "logo48.png",
        "128": "logo128.png"
      }
    }
  }